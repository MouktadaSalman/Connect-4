<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="oval" >

    <!-- Outer ring or border of the token -->
    <solid android:color="#673AB7" /> <!-- Change to yellow or any color you need, e.g., #FFFF00 for yellow -->

    <!-- Optional stroke for border -->
    <stroke
        android:width="4dp"
        android:color="#412278" /> <!-- Darker shade for the border (optional) -->

    <!-- Size of the token -->
    <size
        android:width="48dp"
        android:height="48dp" />

    <!-- Padding (optional, if you want space inside the token) -->
    <padding
        android:left="2dp"
        android:right="2dp"
        android:top="2dp"
        android:bottom="2dp" />
</shape>