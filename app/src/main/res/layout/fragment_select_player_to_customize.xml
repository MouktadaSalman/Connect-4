<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SelectPlayerToCustomizeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/side_bar_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/side_bar_guideline"
        android:weightSum="3"
        android:orientation="vertical"
        android:gravity="top|center">

        <Button
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/oval_button"
            android:layout_marginTop="30dp"/>

        <TextView
            android:id="@+id/selectGameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="40sp"
            android:text="Customize Profiles"
            android:textColor="@color/design_default_color_secondary_variant"
            android:fontFamily="@font/bubbly_font"
            android:gravity="center"/>

        <Button
            android:id="@+id/customizePlayer1Button"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Player 1"
            android:textColor="@color/material_dynamic_neutral20"
            android:fontFamily="@font/bubbly_font"
            android:background="@drawable/oval_button"/>

        <Button
            android:id="@+id/customizePlayer2Button"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="10dp"
            android:text="Player 2"
            android:textColor="@color/material_dynamic_neutral20"
            android:fontFamily="@font/bubbly_font"
            android:background="@drawable/oval_button"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layout1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="2"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="40sp"
            android:text="Select grid to start game"
            android:textColor="@color/design_default_color_secondary_variant"
            android:fontFamily="@font/bubbly_font"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center">

            <Button
                android:id="@+id/smallGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="small grid"
                android:textColor="@color/material_dynamic_neutral20"
                android:fontFamily="@font/bubbly_font"
                android:background="@drawable/oval_button"/>
            <Button
                android:id="@+id/mediumGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="medium grid"
                android:layout_marginStart="10dp"
                android:textColor="@color/material_dynamic_neutral20"
                android:fontFamily="@font/bubbly_font"
                android:background="@drawable/oval_button"/>
            <Button
                android:id="@+id/largeGrid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="large grid"
                android:layout_marginStart="10dp"
                android:textColor="@color/material_dynamic_neutral20"
                android:fontFamily="@font/bubbly_font"
                android:background="@drawable/oval_button"/>

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>