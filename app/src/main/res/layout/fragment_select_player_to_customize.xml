<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SelectPlayerToCustomizeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/side_bar_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.70" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/side_bar_guideline"
        android:weightSum="3"
        android:orientation="vertical"
        android:gravity="top|center">

        <TextView
            android:id="@+id/selectGameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="20sp"
            android:text="Customize Profiles"
            android:textColor="@color/design_default_color_secondary_variant"
            android:fontFamily="@font/BubblyFont"
            android:gravity="center"/>

        <Button
            android:id="@+id/pVPButton"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Player 1"/>

        <Button
            android:id="@+id/whatever"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Player 2"/>
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/side_bar_guideline"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Start Game"/>

</androidx.constraintlayout.widget.ConstraintLayout>