<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.SelectPlayerToCustomizeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/layout1"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:weightSum="3"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/selectGameMode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="40sp"
            android:text="Customize Profiles"
            android:textColor="@color/design_default_color_secondary_variant"
            android:fontFamily="@font/bubbly_font"
            android:gravity="center"/>

        <Button
            android:id="@+id/customizePlayer1Button"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:text="Player 1"
            android:textColor="@color/material_dynamic_neutral20"
            android:fontFamily="@font/bubbly_font"
            android:background="@drawable/oval_button"/>

        <Button
            android:id="@+id/customizePlayer2Button"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.5"
            android:layout_marginTop="40dp"
            android:text="Player 2"
            android:textColor="@color/material_dynamic_neutral20"
            android:fontFamily="@font/bubbly_font"
            android:background="@drawable/oval_button"/>

        <Button
            android:id="@+id/ProfileBackButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:textColor="@color/material_dynamic_neutral20"
            android:fontFamily="@font/bubbly_font"
            android:background="@drawable/oval_button"
            android:layout_marginTop="60dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>